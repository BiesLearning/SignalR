@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row border p-1 pb-3">
        <h3 class="text-center mb-3">Best Deathly Hallow </h3>
        <div class="col-4 text-center">
            <div class="fw-bold">Invisibility Cloak - <span id="cloakCounter"></span></div>
            <button class="btn btn-primary" onclick="vote('cloak')">Vote</button>
        </div>
        <div class="col-4 text-center">
            <div class="fw-bold">Resurrection Stone - <span id="stoneCounter"></span></div>
            <button class="btn btn-primary" onclick="vote('stone')">Vote</button>
        </div>
        <div class="col-4 text-center">
            <div class="fw-bold">Elder Wand - <span id="wandCounter"></span></div>
            <button class="btn btn-primary" onclick="vote('wand')">Vote</button>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/signalr.js"></script>
    <script src="~/js/deathlyHallows.js"></script>
}